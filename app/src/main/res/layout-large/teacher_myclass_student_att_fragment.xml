<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
   <!-- <FrameLayout style="@style/SubFrameLayoutWeight1"
        android:layout_weight="0.3"
        android:layout_height="wrap_content">
        <TextView style="@style/TextViewFontStyle"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:text="My Class"/>
    </FrameLayout>-->
    <FrameLayout style="@style/SubFrameLayoutWeight1"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <TextView style="@style/TextViewFontStyle"
            android:layout_gravity="left"
            android:textColor="@color/black"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:text="Standard :"/>
        <TextView style="@style/TextViewFontStyle"
            android:layout_gravity="left"
            android:id="@+id/txtstdname"
            android:textColor="@color/black"
            android:gravity="center"
            android:textStyle="normal"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="100dp"
            android:textSize="20dp"
            android:text="Playgroup"/>
        <TextView style="@style/TextViewFontStyle"
            android:layout_gravity="right"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="90dp"
            android:textSize="20dp"
            android:text="Div :"/>
        <TextView style="@style/TextViewFontStyle"
            android:layout_gravity="right"
            android:id="@+id/txtclassname"
            android:textColor="@color/black"
            android:gravity="center"
            android:textStyle="normal"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:textSize="20dp"
            android:text="A"/>
    </FrameLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:background="@drawable/border_line"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_weight="6"
        android:choiceMode="multipleChoice"
        android:divider="@color/colorAccent"
        android:dividerHeight="0.5dp"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/lstStudentclasslist"></ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

       <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:id="@+id/saveAttendance"
            android:background="@drawable/buttonselector"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:text="Save" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/buttonselector"
            android:layout_weight="1"
            android:id="@+id/btnselectAll"
            android:layout_gravity="right"
            android:textColor="@color/white"
            android:text="Select All" />

    </LinearLayout>

</LinearLayout>
