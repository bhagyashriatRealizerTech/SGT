<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:weightSum="15">

    <FrameLayout style="@style/SubFrameLayoutWeight1"
        android:background="#ffffff"
        android:layout_height="wrap_content">
        <TextView style="@style/TextViewFontStyle"
            android:layout_gravity="left"
            android:textColor="#000000"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:text="Class :"/>
        <TextView style="@style/TextViewFontStyle"
            android:layout_gravity="left"
            android:id="@+id/txttclassname"
            android:textColor="#000000"
            android:gravity="center"
            android:textStyle="normal"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="70dp"
            android:textSize="20dp"
            android:text="Playgroup"/>
        <TextView style="@style/TextViewFontStyle"
            android:layout_gravity="right"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="90dp"
            android:textSize="20dp"
            android:text="Div :"/>
        <TextView style="@style/TextViewFontStyle"
            android:layout_gravity="right"
            android:id="@+id/txttdivname"
            android:textColor="#000000"
            android:gravity="center"
            android:textStyle="normal"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:textSize="20dp"
            android:text="A"/>
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_weight="0.2"
        android:background="@drawable/border_line"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <TextView style="@style/NormalFontAndSize.MarginLeft40"
            android:text="Title"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:textSize="22sp"
            android:layout_gravity="center_vertical"
            />
        <TextView style="@style/NormalFontAndSize.MarginLeft170"
            android:text=": English"
            android:textColor="#323232"
            android:layout_marginLeft="175dp"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:id="@+id/txttitle"/>

    </FrameLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/border_line"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <TextView style="@style/NormalFontAndSize.MarginLeft40"
            android:text="Date"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:textSize="22sp"
            android:layout_gravity="center_vertical"
            />
        <TextView style="@style/NormalFontAndSize.MarginLeft170"
            android:text=": 29 August 2016"
            android:textColor="@color/black"
            android:layout_marginLeft="175dp"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:id="@+id/txttimetabledate"/>

    </FrameLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/border_line"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <TextView style="@style/NormalFontAndSize.MarginLeft40"
            android:text="Teacher Name"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:textSize="22sp"
            android:layout_gravity="center_vertical"
            />
        <TextView style="@style/NormalFontAndSize.MarginLeft170"
            android:text=": Divyesh Shah"
            android:textColor="@color/black"
            android:layout_marginLeft="175dp"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:id="@+id/txtteacherName"/>

    </FrameLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/border_line"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:id="@+id/frameimageClik"
        >
        <!--<TextView style="@style/NormalFontAndSize.MarginLeft40"
            android:text="@string/click_to_view_image"
            android:textStyle="normal"
            android:textColor="@color/colorPrimaryDark"
            android:layout_margin="0dp"
            android:layout_gravity="center"
            android:id="@+id/txtclicktoviewimage"
            />-->
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/imageviewborder"
            android:id="@+id/btnCapturePicture1"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"

            />

    </FrameLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/txtDivider"
        android:background="@drawable/border_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="7dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Decription:"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_margin="0dp"
            android:padding="7dp"
            android:textSize="22sp"
            android:layout_gravity="left|top"
           />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"></ScrollView>

        <TextView style="@style/NormalFontAndSize.MarginLeft40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Decription"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:layout_margin="0dp"
            android:padding="7dp"
            android:id="@+id/txtdescription"
            android:textSize="20sp"
            android:layout_gravity="left|top" />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/border_line"/>
</LinearLayout>