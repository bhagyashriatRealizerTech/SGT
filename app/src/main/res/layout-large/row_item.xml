<?xml version="1.0" encoding="utf-8"?>
<com.realizer.schoolgeine.teacher.view.CheckableRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="@color/white"
    android:padding="5dp" >


    <RelativeLayout
        android:id="@+id/id_relativeLayout"
        android:layout_width="fill_parent"
        android:layout_height="75dp">

        <FrameLayout
            android:id="@+id/id_image_frame_layout"
            android:layout_width="67dp"
            android:layout_height="67dp">

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/txtinitialPupil"
                android:background="@drawable/profilepic_circle"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="18dp"
                android:visibility="gone"
                android:text="VS"/>

            <com.realizer.schoolgeine.teacher.view.RoundedImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:visibility="visible"
                android:layout_marginLeft="5dp"
                android:scaleType="center"
                android:background="@drawable/pic_background"
                android:id="@+id/img_user_image" />

        </FrameLayout>

        <LinearLayout
            android:id="@+id/linearlayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@id/id_image_frame_layout"
            android:gravity="left|center"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1"
                android:id="@+id/first_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:textSize="22dp"
                android:text="hhhhh"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <com.realizer.schoolgeine.teacher.view.SelectStudentCheckBox
                android:id="@+id/select_Recipient_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/linearlayout"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:focusable="false"
                android:button="@drawable/multi_radio_chice"
                android:paddingRight="3dp" />
        </LinearLayout>

    </RelativeLayout>

</com.realizer.schoolgeine.teacher.view.CheckableRelativeLayout>
