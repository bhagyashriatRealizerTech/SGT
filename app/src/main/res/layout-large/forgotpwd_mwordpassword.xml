<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout style="@style/SubFrameLayoutWeight1"
        android:background="@color/colorAccent"
        android:layout_height="70dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/dialogTitle"
            android:text="Password Recovery by Magic Word"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
        </FrameLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/infodialog"
        android:text="Please Enter Valid User ID and Magic Word to Reset password."
        android:textSize="16sp"
        android:gravity="center"
        android:textStyle="normal"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/black"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/square"
        android:id="@+id/edtuserid"
        android:singleLine="true"
        android:hint="Enter User ID"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:textColorHint="#c0c0c0"
        android:layout_above="@+id/btnLogin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/square"
        android:id="@+id/edtmagicword"
        android:singleLine="true"
        android:hint="Enter Magic Word"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:textColorHint="#c0c0c0"
        android:layout_above="@+id/btnLogin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/border_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">
        <Button style="@style/LoginButton"
            android:layout_width="220dp"
            android:background="@drawable/login_button_orange"
            android:layout_height="50dp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:textSize="25sp"
            android:id="@+id/btn_submit"
            android:text="Submit"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <Button style="@style/LoginButton"
            android:layout_width="220dp"
            android:background="@drawable/login_button_orange"
            android:layout_height="50dp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:textSize="25sp"
            android:id="@+id/btn_cancel"
            android:text="Cancel"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
    </LinearLayout>

</LinearLayout>