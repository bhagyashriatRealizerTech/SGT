<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="13"
    >

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/linuserlayout"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/linlayout"
        android:layout_margin="10dp"
        >
        <com.realizer.schoolgeine.teacher.view.RoundedImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:visibility="visible"
            android:id="@+id/iv_uImage" />

        <TextView android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:background="@drawable/profilepic_circle"
            android:id="@+id/img_user_text_image" />

        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal|bottom"
            android:id="@+id/txtuName"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="10dp"
            android:textSize="18sp"/>

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:dividerHeight="5dp"
        android:divider="@color/white"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/linlayout"
        android:visibility="gone"
        android:id="@+id/lst_notification"/>

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="13"
        android:id="@+id/linlayout"
        android:layout_alignParentBottom="true"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#d3d3d3"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="90dp"
                            android:layout_height="120dp"
                            android:id="@+id/txttdashmyclass"
                            android:textSize="14sp"
                            android:background="@color/white"
                            android:textColor="@color/colorAccent"
                            android:layout_margin="2dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:drawablePadding="5dip"
                            android:layout_weight="1"
                            android:textAllCaps="false"
                            android:textStyle="normal"
                            android:drawableTop="@drawable/newmyclass"
                            android:text="My Class"/>
                        <Button
                            android:layout_width="90dp"
                            android:layout_height="120dp"
                            android:id="@+id/txttdashhomework"
                            android:textSize="14sp"
                            android:layout_marginTop="2dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:background="@color/white"
                            android:textColor="@color/colorAccent"
                            android:drawablePadding="5dip"
                            android:layout_weight="1"
                            android:textAllCaps="false"
                            android:textStyle="normal"
                            android:drawableTop="@drawable/newhomework"
                            android:text="Homework"/>
                        <Button
                            android:layout_width="90dp"
                            android:layout_height="120dp"
                            android:id="@+id/txttdashviewstar"
                            android:textSize="14sp"
                            android:layout_marginTop="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_marginLeft="2dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:background="@color/white"
                            android:textColor="@color/colorAccent"
                            android:drawablePadding="5dip"
                            android:layout_weight="1"
                            android:textAllCaps="false"
                            android:textStyle="normal"
                            android:drawableTop="@drawable/newstar"
                            android:text="Reward Star"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#d3d3d3"
                        android:orientation="horizontal">
                        <Button
                            android:layout_width="90dp"
                            android:layout_height="120dp"
                            android:id="@+id/txttdashtimetable"
                            android:textSize="14sp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginRight="2dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:background="@color/white"
                            android:textColor="@color/colorAccent"
                            android:layout_weight="1"
                            android:textAllCaps="false"
                            android:textStyle="normal"
                            android:drawableTop="@drawable/newtimetable"
                            android:text="Time Table"/>

                        <Button
                            android:layout_width="90dp"
                            android:layout_height="120dp"
                            android:textSize="14sp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:id="@+id/txttdashqueries"
                            android:background="@color/white"
                            android:textColor="@color/colorAccent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textAllCaps="false"
                            android:textStyle="normal"
                            android:drawableTop="@drawable/newquery"
                            android:text="Chat"/>
                        <Button
                            android:layout_width="90dp"
                            android:layout_height="120dp"
                            android:textSize="14sp"
                            android:id="@+id/txttdashfuncenter"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:layout_marginRight="2dp"
                            android:layout_marginLeft="2dp"
                            android:background="@color/white"
                            android:textColor="@color/colorAccent"
                            android:layout_weight="1"
                            android:textAllCaps="false"
                            android:textStyle="normal"
                            android:drawableTop="@drawable/newfuncenter"
                            android:text="Fun Center"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#d3d3d3"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="90dp"
                            android:layout_height="120dp"
                            android:textSize="14sp"
                            android:id="@+id/txttdashcommunication"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_marginBottom="2dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:background="@color/white"
                            android:textColor="@color/colorAccent"
                            android:layout_weight="1"
                            android:textAllCaps="false"
                            android:textStyle="normal"
                            android:drawableTop="@drawable/newalerts"
                            android:text="Alerts"/>


                        <Button
                            android:layout_width="90dp"
                            android:layout_height="120dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:textSize="14sp"
                            android:id="@+id/txttdashclasswork"
                            android:background="@color/white"
                            android:textColor="@color/colorAccent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textAllCaps="false"
                            android:textStyle="normal"
                            android:drawableTop="@drawable/newclasswork"
                            android:text="Classwork"/>
                        <Button
                            android:layout_width="90dp"
                            android:layout_height="120dp"
                            android:id="@+id/txttdashpublicholiday"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:textSize="14sp"
                            android:layout_marginRight="2dp"
                            android:layout_marginLeft="2dp"
                            android:background="@color/white"
                            android:textColor="@color/colorAccent"
                            android:layout_weight="1"
                            android:textAllCaps="false"
                            android:textStyle="normal"
                            android:drawableTop="@drawable/newholiday"
                            android:text="Holiday"/>

                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>