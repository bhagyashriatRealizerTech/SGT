<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:background="#ffffff"
        android:weightSum="13"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <FrameLayout style="@style/SubFrameLayoutWeight1"
        android:background="#ffffff"
        android:layout_height="wrap_content">
        <TextView style="@style/TextViewFontStyle"
            android:layout_gravity="left"
            android:textColor="#000000"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:text="Class :"/>
        <TextView style="@style/TextViewFontStyle"
            android:layout_gravity="left"
            android:id="@+id/txttclassname"
            android:textColor="#000000"
            android:gravity="center"
            android:textStyle="normal"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="90dp"
            android:textSize="20dp"
            android:text="Playgroup"/>
        <TextView style="@style/TextViewFontStyle"
            android:layout_gravity="right"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="90dp"
            android:textSize="20dp"
            android:text="Div :"/>
        <TextView style="@style/TextViewFontStyle"
            android:layout_gravity="right"
            android:id="@+id/txttdivname"
            android:textColor="#000000"
            android:gravity="center"
            android:textStyle="normal"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:textSize="20dp"
            android:text="A"/>
    </FrameLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:background="@drawable/border_line"/>



    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12.2"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:divider="@color/white"
        android:id="@+id/lsttgeneralcommunication"/>

</LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/txtnewcommunication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_add" />
   <!-- <ImageButton
        android:id="@+id/txtnewcommunication"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/add_person_background"
        android:src="@drawable/ic_add"
        android:visibility="visible"
        android:clickable="true"/>-->
</RelativeLayout>