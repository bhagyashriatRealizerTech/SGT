<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="13"
    android:background="#ffffff">



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">
        <com.realizer.schoolgeine.teacher.view.RoundedImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/profilepicpupil"
            android:paddingLeft="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="left|center_vertical"
            android:visibility="gone"/>
        <TextView
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/txtinitialPupil"
            android:background="@drawable/profilepic_circle"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18dp"
            android:text="VS"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="100dp"
            android:orientation="vertical">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="20dp">
                <TextView style="@style/NormalFontAndSize.MarginLeft40"
                    android:text="Name      "
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"
                    android:textColor="#323232"
                    />
                <TextView style="@style/NormalFontAndSize.MarginLeft170"
                    android:text="Vivaan Vishal Salgare"
                    android:layout_marginLeft="80dp"
                    android:textColor="#323232"
                    android:id="@+id/txtPupilName"/>

            </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/border_line"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView style="@style/NormalFontAndSize.MarginLeft40"
                    android:textColor="#323232"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"
                    android:text="Class      "/>
                <TextView style="@style/NormalFontAndSize.MarginLeft170"
                    android:layout_marginLeft="80dp"
                    android:text="I"
                    android:textColor="#323232"
                    android:id="@+id/txtClass"/>
            </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/border_line"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView style="@style/NormalFontAndSize.MarginLeft40"
                    android:textColor="#323232"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"
                    android:text="Division  "/>
                <TextView style="@style/NormalFontAndSize.MarginLeft170"
                    android:layout_marginLeft="80dp"
                    android:text="A"
                    android:textColor="#323232"
                    android:id="@+id/txtDivision"/>
            </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/border_line"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView style="@style/NormalFontAndSize.MarginLeft40"
                    android:textColor="#323232"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"
                    android:text="Roll No. "/>
                <TextView style="@style/NormalFontAndSize.MarginLeft170"
                    android:layout_marginLeft="80dp"
                    android:text="1"
                    android:textColor="#323232"
                    android:id="@+id/txtRollNo"/>
            </FrameLayout>

        </LinearLayout>
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:background="@drawable/border_line"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <TextView style="@style/NormalFontAndSize.MarginLeft40"
            android:text="Birth Date"
            android:textStyle="bold"
            android:textColor="#323232"
            />
        <TextView style="@style/NormalFontAndSize.MarginLeft170"
            android:text=": 29 March 2014"
            android:textColor="#323232"
            android:layout_marginLeft="175dp"
            android:id="@+id/txtDOB"/>

    </FrameLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/border_line"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView style="@style/NormalFontAndSize.MarginLeft40"
            android:textColor="#323232"
            android:textStyle="bold"
            android:text="Pupil Hobbies"/>
        <TextView style="@style/NormalFontAndSize.MarginLeft170"
            android:text=": Singing,Reading"
            android:textColor="#323232"
            android:layout_marginLeft="175dp"
            android:id="@+id/txthobbies"/>
    </FrameLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/border_line"/>\

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView style="@style/NormalFontAndSize.MarginLeft40"
            android:textColor="#323232"
            android:textStyle="bold"
            android:text="Blood Group"/>
        <TextView style="@style/NormalFontAndSize.MarginLeft170"
            android:text=": O+"
            android:textColor="#323232"
            android:layout_marginLeft="175dp"
            android:id="@+id/txtBloodGroup"/>
    </FrameLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/border_line"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView style="@style/NormalFontAndSize.MarginLeft40"
            android:textColor="#323232"
            android:textStyle="bold"
            android:text="Parent Name"/>
        <TextView style="@style/NormalFontAndSize.MarginLeft170"
            android:text=": Mr. A.B.Chawala"
            android:layout_marginLeft="175dp"
            android:textColor="#323232"
            android:id="@+id/txtparentName"/>
    </FrameLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/border_line"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView style="@style/NormalFontAndSize.MarginLeft40"
            android:textColor="#323232"
            android:textStyle="bold"
            android:text="Contact Number"/>
        <TextView style="@style/NormalFontAndSize.MarginLeft170"
            android:text=": 020-556677"
            android:textColor="#323232"
            android:layout_marginLeft="175dp"
            android:id="@+id/txtContactNo"/>
    </FrameLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/border_line"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView style="@style/NormalFontAndSize.MarginLeft40"
            android:textColor="#323232"
            android:textStyle="bold"
            android:text="Emergemcy Contact"/>
        <TextView style="@style/NormalFontAndSize.MarginLeft170"
            android:text=": 020-556677"
            android:textColor="#323232"
            android:layout_marginLeft="175dp"
            android:id="@+id/txtEmergencyContactNo"/>
    </FrameLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/border_line"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <TextView style="@style/NormalFontAndSize.MarginLeft40"
            android:textColor="#323232"
            android:textStyle="bold"
            android:text="Address"/>
        <TextView style="@style/NormalFontAndSize.MarginLeft170"
            android:text=":Shastri Nagar Chowk, Near IBM,Don Bosco Road,Yerawada, Pune, Maharashtra 411006"
            android:textColor="#323232"
            android:layout_marginLeft="175dp"
            android:id="@+id/txtAddress"/>
    </FrameLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/border_line"/>
</LinearLayout>